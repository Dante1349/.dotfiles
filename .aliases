# bash colors
alias 0='t.setTerminalColor'   #reset
alias 1='t.setTerminalColor 1' #red
alias 2='t.setTerminalColor 2' #green
alias 3='t.setTerminalColor 3' #yellow
alias 4='t.setTerminalColor 4' #blue
alias 5='t.setTerminalColor 5' #pink
alias 6='t.setTerminalColor 6' #cyan
alias 7='t.setTerminalColor 7' #white
alias 8='t.setTerminalColor 8' #black

alias rst='t.setTerminalColor'
alias red='t.setTerminalColor red'
alias blue='t.setTerminalColor blue'
alias yellow='t.setTerminalColor yellow'
alias green='t.setTerminalColor green'
alias cyan='t.setTerminalColor cyan'
alias pink='t.setTerminalColor magenta'
alias white='t.setTerminalColor 7'

# show shortcuts
alias sc='cat ~/.aliases | egrep -v "^\s*(#|$)"'
alias ea='nano ~/.dotfiles/.aliases'
alias ef='nano ~/.dotfiles/.functions'
# Easier navigation: .., ..., ...., .....
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias e='exit'
alias c='clear'
alias b='cd -'

# Folder Shortcuts
alias d='cd ~/Downloads'
alias w='cd $DOTFILES_WORKSPACE_PATH'

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Get week number
alias week='date +%V'

# source zsh
alias sz='source ~/.zshrc && echo "reloaded zsh"'

# debian and ubuntu
alias uu='sudo apt-get update && sudo apt-get upgrade -y'
alias ui='sudo apt-get install '
alias us='sudo apt-cache search '

# untar
alias untar='tar -zxvf '

# webserver from current folder
alias webserver='python -m SimpleHTTPServer 8000'

# showip
alias ip.ext='curl ipinfo.io/ip'
alias ip.lan='ifconfig eth0 | grep 'inet addr' | cut -d: -f2 | awk '{print $1}''
alias ip.wlan='ifconfig wlp3s0 | grep 'inet addr' | cut -d: -f2 | awk '{print $1}''

# password generation
alias p8='openssl rand -base64 8'
alias p16='openssl rand -base64 16'
alias p32='openssl rand -base64 32'

# git
alias gs='git status'
alias gb='git branch -vv'
alias gp='git pull '
alias gac='git add . && git commit -a -m '
alias gpsh='git push '

# git confie
alias gitconfmail='git config --global user.email '
alias gitconfname='git config --global user.name '

# system
# *  sudo apt-get lm-sensors
alias cputemp='sensors | grep Core'

# network
alias ports='sudo netstat -tulanp'
